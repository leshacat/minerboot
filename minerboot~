# Make sure only root can run our script
if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root" 1>&2
   exit 1
fi

# Load our functions
source inc/functions.sh

# Run our setup script
source inc/setup.sh

# Run the miner(s)
source miners









